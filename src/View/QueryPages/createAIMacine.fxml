<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>

<AnchorPane fx:id="aiMacinePane" prefHeight="375.0" prefWidth="585.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.QueryPages.createAIMacineController">
    <VBox alignment="TOP_CENTER" prefHeight="576.0" prefWidth="585.0" styleClass="Content">
        <VBox alignment="CENTER" prefHeight="80.0" prefWidth="600.0" styleClass="InnerMenuBar">
            <Label alignment="CENTER" text="Create a new delivery using AI" textAlignment="CENTER">
                <font>
                    <Font size="30.0" />
                </font>
                <effect>
                    <DropShadow />
                </effect>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </Label>
         <Label alignment="CENTER" text="Please select your choice of delivery person, delivery area and a set of orders " textAlignment="CENTER">
            <effect>
               <DropShadow />
            </effect>
         </Label>
        </VBox>
        <GridPane alignment="CENTER" hgap="15.0" vgap="40.0">
            <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="200.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <VBox.margin>
                <Insets left="30.0" right="30.0" top="60.0" />
            </VBox.margin>
         <children>
            <Label text="Select a delivery person:">
               <font>
                  <Font size="16.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
            <Label text="Select a delivery area:" GridPane.rowIndex="1">
               <font>
                  <Font size="16.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
            <Label text="Select orders to deliver" GridPane.rowIndex="2">
               <font>
                  <Font size="16.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
            <ComboBox fx:id="dp_combobox" prefWidth="200.0" GridPane.columnIndex="1" />
            <ComboBox fx:id="da_combobox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <CheckComboBox fx:id="order_combobox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
        </GridPane>
      <Button fx:id="query_button" mnemonicParsing="false" onAction="#buttonPressed" text="Activate AI Machine">
         <font>
            <Font size="22.0" />
         </font>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="query_result">
         <effect>
            <DropShadow />
         </effect>
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
         <VBox.margin>
            <Insets top="60.0" />
         </VBox.margin>
      </Label>
    </VBox>
</AnchorPane>
